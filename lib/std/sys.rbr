fn write(fd: i64, buf: str) -> i64 {
  syscall4(1, fd, slice_ptr(buf), slice_len(buf))
}
fn getpid() -> i64 { syscall1(39) }
fn exit(code: i64) { syscall2(60, code) }
fn kill(pid: i64, sig: i64) -> i64 { syscall3(62, pid, sig) }

fn abort() { kill(getpid(), 6) }

fn assert_eq(a: i64, b: i64) {
  if a != b {
    write(1, "assertion failed\n")
    abort()
  }
}
